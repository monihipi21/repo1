using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        Console.WriteLine("Wprowadź kilka liczb oddzielonych spacją:");

        // Odczytanie danych wejściowych i podział ich na liczby
        string wejscie = Console.ReadLine();
        string[] liczbyStr = wejscie.Split(' ');

        // Lista na przechowywanie liczb
        List<int> liczby = new List<int>();

        // Konwersja tekstu na liczby całkowite
        foreach (string liczbaStr in liczbyStr)
        {
            if (int.TryParse(liczbaStr, out int liczba))
            {
                liczby.Add(liczba);
            }
            else
            {
                Console.WriteLine($"Błąd podczas konwersji: {liczbaStr} nie jest liczbą całkowitą.");
            }
        }

        // Obliczenia sumy i średniej
        int suma = 0;
        foreach (int liczba in liczby)
        {
            suma += liczba;
        }

        double srednia = liczby.Count > 0 ? (double)suma / liczby.Count : 0;

        // Wyświetlenie wyników
        Console.WriteLine($"Suma liczb: {suma}");
        Console.WriteLine($"Średnia liczb: {srednia:F2}");
    }
}
